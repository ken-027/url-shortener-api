{
    "name": "url-shortener-api",
    "version": "1.0.0",
    "main": "src/index.js",
    "scripts": {
        "build": "tspc --build && node esbuild.config.js && node swagger-build.js && npm run copy-template",
        "build:automate": "npm run build && npm run vercel:deploy",
        "start": "SET NODE_ENV=production && node build/index.js",
        "dev": "nodemon",
        "prepare": "ts-patch install -s",
        "test": "jest",
        "test:e2e": "jest --testPathPattern=__test__ --testMatch=**/*.e2e.ts --detectOpenHandles --verbose",
        "test-watch:e2e": "jest --testPathPattern=__test__ --testMatch=**/*.e2e.ts --detectOpenHandles --verbose --watch",
        "format": "pnpm exec prettier . --write --cache",
        "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
        "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
        "db:studio": "drizzle-kit studio --config=drizzle.config.ts",
        "jwt:generate": "openssl genrsa -out jwt-secret.key",
        "copy-template": "copyfiles -u 2 src/templates/*.html build/templates",
        "vercel:deploy": "npx vercel --prod"
    },
    "author": "ken-27",
    "license": "ISC",
